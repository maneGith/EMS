{% extends 'base.html.twig' %}

{% block body %}
    {{ include('includes/header.html.twig') }}

<div id="container" style="border: solid 1px #d2d2d2;overflow-x: hidden;overflow-y:hidden">
    <div class="row">

        <div class="column column-left menu">
            {{ include('includes/assistant.html.twig') }}
        </div>
        <div class="column column-middle" style="background: #8E998F">

            <div style="background: #fff">
                <div>
                    <span style="color:#337ab7;font-weight: bold">Création d'un abonné</span>
                        <span style="float: right;font-size: 12px;font-weight: bold">
                            <a href="{{ path('expediteur_index') }}" class="btn  btn-ems  r-ems">
                                Quitter
                            </a>
                        </span>
                </div>
                <div style="max-width: 500px;">

                    {{ form_start(form) }}


                    <div class="form-group">
                        <label>Nom du client</label>
                        {{ form_widget(form.usager.prenom,{'attr':{'class':'form-control',
                            'style':'font-weight: bold;border:solid 1px #337ab7'}}) }}
                        {{ form_errors(form.usager.prenom) }}
                    </div>


                    <div class="form-group">
                        <label>Téléphone</label>
                        {{ form_widget(form.usager.telephone,{'attr':{'class':'form-control',
                            'style':'font-weight: bold;border:solid 1px #337ab7'}}) }}
                        {{ form_errors(form.usager.telephone) }}
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        {{ form_widget(form.usager.email,{'attr':{'class':'form-control',
                            'style':'font-weight: bold;border:solid 1px #337ab7'}}) }}
                        {{ form_errors(form.usager.email) }}
                    </div>

                    <div class="form-group">
                        <label>Pays</label>
                        {{ form_widget(form.usager.adresse.pays,{'attr':{'class':'form-control',
                            'style':'font-weight: bold;border:solid 1px #337ab7'}}) }}
                        {{ form_errors(form.usager.adresse.pays) }}
                    </div>

                    <div class="form-group">
                        <label>Adresse</label>
                        {{ form_widget(form.usager.adresse.libelle,{'attr':{'class':'form-control',
                            'style':'font-weight: bold;border:solid 1px #337ab7'}}) }}
                        {{ form_errors(form.usager.adresse.libelle) }}
                    </div>
                        {{ form_widget(form) }}



                    <div style="height: 30px"> <input type="submit" value="Ajouter" class="btn  btn-ems  r-ems" /></div>
                    {{ form_end(form) }}


                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
