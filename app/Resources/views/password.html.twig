{% extends 'base.html.twig' %}

{% block body %}
    {{ include('includes/entete.html.twig') }}
    
    <!-- Menu and Content -->
    <div class="div-preview">
        <div class="d-flex" id="wrapper">
            <!-- Page menu -->
            {{ include('includes/menu.html.twig') }}
            
            <!-- Page Content -->
            <div id="page-content-wrapper">

                <div class="titre lien-titre" id="titre">
                   <span style="font-weight: bold">Changement de mot de passe</span>              
                </div> 

                <div class="content" id="content">       
                   
                    <form action="{{ path('password') }}" method='post'>
                        <table style="width: 100%">
                            <tbody>
                            <tr>
                                <td width="15%">
                                </td>
                                <td width="85%">
                                    <div style="max-width: 395px" class="alert-danger">
                                       <span style="font-weight: bold">{{error}}</span>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td width="15%">
                                     <span style="font-weight: bold">
                                      Ancien mot de passe :
                                     </span>
                                </td>
                                <td width="85%">
                                    <div style="padding-top: 15px;padding-right: 5px;max-width: 400px">
                                        <input type="password" name="oldpass"size="20" class="form-control"/>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td width="15%">
                                     <span style="font-weight: bold">
                                      Nouveau mot de passe :
                                     </span>
                                </td>
                                <td width="85%">
                                    <div style="padding-top: 15px;padding-right: 5px;max-width: 400px">
                                        <input type="password" name="newpass1"size="20" class="form-control"/>
                                    </div>

                                </td></tr>
                            <tr>
                                <td width="15%">
                                     <span style="font-weight: bold">
                                      Confirmation mot de passe :
                                     </span>
                                </td>
                                <td width="85%">
                                    <div style="padding-top: 15px;padding-right: 5px;max-width: 400px">
                                        <input type="password" name="newpass2" size="20" class="form-control"/>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td width="15%">
                                </td>
                                <td width="85%">
                                    <div style="padding-top: 15px;padding-right: 5px;">
                                         <input type="submit" value="Modifier" class="btn btn-ems" />
                                        <a href="{{ path('homepage') }}" class="btn  btn-ems">Annuler</a>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </form>
                    
                </div> 
            </div>
        </div>
     </div>





{% endblock %}
