{% extends 'base.html.twig' %}

{% block body %}
    {{ include('includes/entete.html.twig') }}
    
    <!-- Menu and Content -->
    <div class="div-preview">
        <div class="d-flex" id="wrapper">
            <!-- Page menu -->
            {{ include('includes/menu.html.twig') }}
            
            <!-- Page Content -->
            <div id="page-content-wrapper">

                <div class="titre lien-titre" id="titre">
                    <span style="font-weight: bold">Agences de EMS et bureaux de Poste </span>              
                </div> 

                <div class="content" id="content">       
                   <div style="position: relative;" >
                                <div class="sous-titre">
                                    <table style="width: 100%" class="table table-bordered">
                                        <tbody>
                                        <tr>
                                            <td style="border-right: 2px solid #d2d2d2;width: 20%">
                                                <div>
                                                    <span style="font-size: 12px;font-weight: bold">
                                                     Catégorie
                                                    </span>
                                                </div>
                                            </td>
                                            <td  style="border-right: 2px solid #d2d2d2;width: 240px">

                                                <table style="width: 100%">
                                                    <tbody>
                                                    <tr>
                                                        <td style="width: 240px">

                                                            <span style="font-size: 12px;font-weight: bold">Emplacement</span>

                                                        </td>
                                                        <td>
                                                            <span style="float: right">
                                                        <a id="myBtn" href="#" class="btn btn-ems r-ems">
                                                         Créer
                                                        </a>
                                                            </span>
                                                        </td>

                                                    </tr>
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                              
                                                                    {% for ag in agences %}
                            <div style="border-bottom: 1px solid #337ab7;">
                                <table style="width: 100%" class="table table-bordered">
                                    <tbody>
                                    <tr>
                                        <td style="border-right: 2px solid #d2d2d2;width: 20%">
                                            <div>
                                                    <span style="font-size: 12px;font-weight: bold;color: red">


                                                        {% if(ag.statut=='AG') %}
                                                           Agences EMS
                                                        {% elseif(ag.statut=='DG') %}
                                                            Direction générale
                                                        {% elseif(ag.statut=='CH') %}
                                                            Courrier Hybride
                                                        {% elseif(ag.statut=='PD') %}
                                                            Postes Dakar
                                                        {% elseif(ag.statut=='PR') %}
                                                            Postes Règions
                                                        {% endif %}

                                                    </span>
                                            </div>
                                        </td>
                                        <td  style="border-right: 2px solid #d2d2d2;width: 240px">

                                            <table style="width: 100%">
                                                <tbody>
                                                {% for agence in ag.agences %}
                                                    <tr>
                                                        <td style="width: 240px">

                                                            {{ agence.nom }}

                                                        </td>
                                                        <td>
                                                            <span style="float: right">
                                                               <a href="{{ path('agence_edit', { 'id': agence.id }) }}" style="float: right;font-weight: bold">
                                                                   <span class="rs-e">Paramètres</span>
                                                               </a>
                                                            </span>
                                                        </td>

                                                    </tr>
                                                {% endfor %}

                                                </tbody>
                                            </table>

                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>

                        {% endfor %}
                                                                   
                </div> 
                        
                        
                        
                        
                        <div id="myModal" class="modal">
                      <!-- Modal content -->
                      <div class="modal-content" style="width:500px">
                        <div><span class="close">&times;</span></div>
                        <h1 class="mt-4">Création - emplacment</h1>
                              
                        {{ form_start(form) }}
                    <table style="width: 100%">
                        <tbody>

                        <tr>
                            <td width="15%">
                                <div style="padding-top: 15px;padding-right: 5px;padding-left: 5px;">
                                            <span style="font-weight: bold">
                                             Nom :
                                            </span>
                                </div>
                            </td>
                            <td style="width: 85%;">
                                <div style="padding-top: 15px;padding-right: 5px;max-width: 400px">

                                    {{ form_widget(form.nom,{'attr':{'class':'form-control',
                                        'style':'font-weight: bold;border:solid 1px #337ab7'}}) }}
                                    {{ form_errors(form.nom) }}
                                </div>
                            </td>

                        </tr>

                        <tr>
                            <td width="15%">
                                <div style="padding-top: 15px;padding-right: 5px;padding-left: 5px;">
                                            <span style="font-weight: bold">
                                              Localité :
                                            </span>
                                </div>
                            </td>
                            <td style="width: 85%;">
                                <div style="padding-top: 15px;padding-right: 5px;max-width: 400px">

                                    {{ form_widget(form.localite,{'attr':{'class':'form-control',
                                        'style':'font-weight: bold;border:solid 1px #337ab7'}}) }}
                                    {{ form_errors(form.localite) }}
                                </div>
                            </td>

                        </tr>

                        <tr>
                            <td width="15%">
                                <div style="padding-top: 15px;padding-right: 5px;padding-left: 5px;">
                                            <span style="font-weight: bold">
                                              Adresse :
                                            </span>
                                </div>
                            </td>
                            <td style="width: 85%;">
                                <div style="padding-top: 15px;padding-right: 5px;max-width: 400px">
                                    {{ form_widget(form.adresse,{'attr':{'class':'form-control',
                                        'style':'font-weight: bold;border:solid 1px #337ab7'}}) }}
                                    {{ form_errors(form.adresse) }}
                                </div>

                            </td>

                        </tr>

                        <tr>
                            <td width="15%">
                                <div style="padding-top: 15px;padding-right: 5px;padding-left: 5px;">
                                            <span style="font-weight: bold">
                                             Code occ :
                                            </span>
                                </div>
                            </td>
                            <td style="width: 85%;">
                                <div style="padding-top: 15px;padding-right: 5px;max-width: 400px">

                                    {{ form_widget(form.codeO,{'attr':{'class':'form-control',
                                        'style':'font-weight: bold;border:solid 1px #337ab7'}}) }}
                                    {{ form_errors(form.codeO) }}
                                </div>

                            </td>

                        </tr>

                        <tr>
                            <td width="15%">
                                <div style="padding-top: 15px;padding-right: 5px;padding-left: 5px;">
                                            <span style="font-weight: bold">
                                              Code reg :
                                            </span>
                                </div>
                            </td>
                            <td style="width: 85%;">
                                <div style="padding-top: 15px;padding-right: 5px;max-width: 400px">

                                    {{ form_widget(form.codeR,{'attr':{'class':'form-control',
                                        'style':'font-weight: bold;border:solid 1px #337ab7'}}) }}
                                    {{ form_errors(form.codeR) }}
                                </div>

                            </td>

                        </tr>

                        <tr>
                            <td width="15%">
                                <div style="padding-top: 15px;padding-right: 5px;padding-left: 5px;">
                                            <span style="font-weight: bold">
                                              Catégorie
                                            </span>
                                </div>
                            </td>
                            <td style="width: 85%;">
                                <div style="padding-top: 15px;padding-right: 5px;max-width: 400px">
                                    <div id="{{ form.statut.vars.id }}">
                                        <table style="width: 100%">
                                            <tbody>
                                            <tr>

                                                {% for statut in form.statut.children %}
                                                    <td>
                                                        <div class="radio">
                                                            <label class="required">
                                                                <input id="{{ statut.vars.id }}" name="{{ statut.vars.full_name }}" required="required" value="{{ statut.vars.value }}" type="radio"/>
                                                                {{ statut.vars.label }}
                                                            </label>
                                                        </div>
                                                    </td>

                                                {% endfor %}

                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    {% do form.statut.setRendered %}
                                </div>
                            </td>
                            <td style="width: 25%;"></td>
                        </tr>

                        <tr>
                            <td width="15%">

                            </td>
                            <td width="85%">
                                <div style="padding-top: 15px;padding-right: 5px;">
                                    <input type="submit" value="Ajouter" class="btn  btn-ems" />
                                    <a href="{{ path('agence_index') }}" class="btn  btn-ems">
                                        Annuler
                                    </a>
                                </div>
                            </td>
                        </tr>

                        </tbody>

                    </table>
  {{ form_end(form) }}
                       
                        
                      </div>
                                        
                    </div>
            </div>
        </div>
     </div>





{% endblock %}
