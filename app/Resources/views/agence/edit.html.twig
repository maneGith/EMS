{% extends 'base.html.twig' %}

{% block body %}
    {{ include('includes/entete.html.twig') }}
    
    <!-- Menu and Content -->
    <div class="div-preview">
        <div class="d-flex" id="wrapper">
            <!-- Page menu -->
            {{ include('includes/menu.html.twig') }}
            
            <!-- Page Content -->
            <div id="page-content-wrapper">

                <div class="titre lien-titre" id="titre">
                    <span style="font-weight: bold">Paramètres généraux d'un emplacement</span>             
                </div> 

                <div class="content" id="content">       
                   {{ form_start(edit_form) }}
            <table class="table table-condensed">
                <tbody>

                    <tr>
                        <th>Nom</th>
                        <td>{{ agence.nom }}       <span class="rs-e">Modifier</span>
                            <div class="De-e">
                                <div class="form-group" style="max-width: 400px">
                                    {{ form_widget(edit_form.nom,{'attr':{'class':'form-control',
                                        'style':'font-weight: bold;border:solid 1px #337ab7'}}) }}
                                    {{ form_errors(edit_form.nom) }}
                                </div>
                                        <span>
                                            <input type="submit" value="Modifier" class="btn btn-ems" />
                                            <a href="{{ path('agence_edit', { 'id': agence.id }) }}" class="btn btn-ems">Annuler</a>
                                        </span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>Localité</th>
                        <td>{{ agence.localite }}  <span class="rs-e">Modifier</span>
                            <div class="De-e">
                                <div class="form-group" style="max-width: 400px">
                                    {{ form_widget(edit_form.localite,{'attr':{'class':'form-control',
                                        'style':'font-weight: bold;border:solid 1px #337ab7'}}) }}
                                    {{ form_errors(edit_form.localite) }}
                                </div>
                                    <span>
                                        <input type="submit" value="Modifier" class="btn btn-ems" />
                                        <a href="{{ path('agence_edit', { 'id': agence.id }) }}" class="btn btn-ems">Annuler</a>
                                    </span>
                            </div>
                        </td>

                    </tr>

                    <tr>

                        <th>Adresse</th>
                        <td>{{ agence.adresse }}   <span class="rs-e">Modifier</span>
                            <div class="De-e">
                                <div class="form-group" style="max-width: 400px">
                                    {{ form_widget(edit_form.adresse,{'attr':{'class':'form-control',
                                        'style':'font-weight: bold;border:solid 1px #337ab7'}}) }}
                                    {{ form_errors(edit_form.adresse) }}
                                </div>
                                   <span>
                                        <input type="submit" value="Modifier" class="btn btn-ems" />
                                        <a href="{{ path('agence_edit', { 'id': agence.id }) }}" class="btn btn-ems">Annuler</a>
                                   </span>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th>Code occasionnel</th>
                        <td>{{ agence.codeO }}  <span class="rs-e">Modifier</span>
                            <div class="De-e">
                                <div class="form-group" style="max-width: 400px">
                                    {{ form_widget(edit_form.codeO,{'attr':{'class':'form-control',
                                        'style':'font-weight: bold;border:solid 1px #337ab7'}}) }}
                                    {{ form_errors(edit_form.codeO) }}
                                </div>
                                    <span>
                                        <input type="submit" value="Modifier" class="btn btn-ems" />
                                        <a href="{{ path('agence_edit', { 'id': agence.id }) }}" class="btn btn-ems">Annuler</a>
                                    </span>
                            </div>
                        </td>

                    </tr>
                    <tr>
                        <th>Code régulier</th>
                        <td>{{ agence.codeR }}  <span class="rs-e">Modifier</span>
                            <div class="De-e">
                                <div class="form-group" style="max-width: 400px">
                                    {{ form_widget(edit_form.codeR,{'attr':{'class':'form-control',
                                        'style':'font-weight: bold;border:solid 1px #337ab7'}}) }}
                                    {{ form_errors(edit_form.codeR) }}
                                </div>
                                    <span>
                                        <input type="submit" value="Modifier" class="btn btn-ems" />
                                        <a href="{{ path('agence_edit', { 'id': agence.id }) }}" class="btn btn-ems">Annuler</a>
                                    </span>
                            </div>
                        </td>

                    </tr>

                    <tr>
                        <th>Catégorie</th>
                        <td>{{ agence.statut }}  <span class="rs-e">Modifier</span>
                            <div class="De-e">
                                <div class="form-group" style="max-width: 400px">
                                    <div id="{{ edit_form.statut.vars.id }}">
                                        <table style="width: 100%">
                                            <tbody>
                                            <tr>

                                                {% for statut in edit_form.statut.children %}
                                                    <td>
                                                        <div class="radio">
                                                            <label class="required">

                                                                {% if(statut.vars.value==agence.statut) %}
                                                                    <input id="{{ statut.vars.id }}" name="{{ statut.vars.full_name }}" required="required" value="{{ statut.vars.value }}" type="radio" checked/>
                                                                {% else %}
                                                                    <input id="{{ statut.vars.id }}" name="{{ statut.vars.full_name }}" required="required" value="{{ statut.vars.value }}" type="radio"/>
                                                                {% endif %}


                                                                <span> {{ statut.vars.label }}</span>
                                                            </label>
                                                        </div>
                                                    </td>

                                                {% endfor %}

                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    {% do edit_form.statut.setRendered %}
                                </div>
                                    <span>
                                        <input type="submit" value="Modifier" class="btn btn-ems" />
                                        <a href="{{ path('agence_edit', { 'id': agence.id }) }}" class="btn btn-ems">Annuler</a>
                                    </span>
                            </div>
                        </td>

                    </tr>


            {{ form_end(edit_form) }}
                    <tr>
                        <td colspan="3">
            <span  style="float: right">
                    <ul>
                        <li style="float:left;">
                            <a href="{{ path('agence_index') }}"><input type="button" value="Lister" class="btn  btn-ems" style="margin-right: 15px;"/></a>
                        </li>

                        <li style="float:left;">
                            {{ form_start(delete_form) }}
                            <a href="#"> <input type="submit" value="Suprm" class="btn  btn-ems"></a>
                            {{ form_end(delete_form) }}
                        </li>
                    </ul>
            </span></td></tr>
                </tbody>
            </table>
                </div> 
            </div>
        </div>
     </div>





{% endblock %}
