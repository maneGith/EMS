                </div> 
                        
                        
                        
                        <div id="myModal" class="modal">
                      <!-- Modal content -->
                      <div class="modal-content" style="width:500px">
                        <div><span class="close">&times;</span></div>
                        <h1 class="mt-4">Création d'une vacation</h1>
                              
                        {{ form_start(form) }}
                        <table style="width: 100%" class="table table-bordered">
                            <tbody>
                            <tr>
                                <td style="width: 50%">
                                    <div>
                                        <b>Journée du :</b>
                                        
                                        
                                        <div class="input-group date">
                                            <input type="text" class="form-control" id="datepicker" name="datepicker" autocomplete="off" placeholder="Entrez la date"/><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                         </div>
                                    </div>
                                </td>
                                <td style="width: 50%">
                                    <div>
                                        <b>Numéro vacation</b>
                                        <div class="form-group">
                                            <input type="hidden"  name="numvacation"  value="{{ numvacation }}"/>
                                            <span style="font-weight: bold">{{ numvacation }}</span>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td style="width: 50%">
                                    
                                     <b>Début de la vacation</b>
                                </td>
                                <td style="width: 50%">
                                    <table style="width: 100%">
                                        <tbody>
                                        <tr>
                                            <td style="width: 50%">
                                                <div>
                                                    <b>Heure</b>
                                                    <div class="form-group">
                                                        <select class="form-control" name="debutheure">
                                                            <option value="00" selected>00</option>
                                                            {% for i in 1..23 %}

                                                                {% if(i<10) %}
                                                                    <option value="0{{ i }}">0{{ i }}</option>
                                                                {% else %}
                                                                    <option value="{{ i }}">{{ i }}</option>
                                                                {% endif %}
                                                            {% endfor %}
                                                        </select>
                                                    </div>
                                                </div>
                                            </td>
                                            <td style="width: 50%">
                                                <div>
                                                    <b>Minute</b>
                                                    <div class="form-group">
                                                        <select class="form-control" name="debutminute">
                                                            <option value="00" selected>00</option>
                                                            {% for i in 1..59 %}
                                                                {% if(i<10) %}
                                                                    <option value="0{{ i }}">0{{ i }}</option>
                                                                {% else %}
                                                                    <option value="{{ i }}">{{ i }}</option>
                                                                {% endif %}
                                                            {% endfor %}
                                                        </select>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td style="width: 50%">
                                    
                                        <b>Fin de la vacation</b>
                                    
                                </td>
                                <td style="width: 50%">
                                    <table style="width: 100%">
                                        <tbody>
                                        <tr>
                                            <td style="width: 50%">
                                                <div>
                                                    <b>Heure</b>
                                                    <div class="form-group">
                                                        <select class="form-control" name="finheure">
                                                            <option value="00" selected>00</option>
                                                            {% for i in 1..23 %}

                                                                {% if(i<10) %}
                                                                    <option value="0{{ i }}">0{{ i }}</option>
                                                                {% else %}
                                                                    <option value="{{ i }}">{{ i }}</option>
                                                                {% endif %}
                                                            {% endfor %}
                                                        </select>
                                                    </div>
                                                </div>
                                            </td>
                                            <td style="width: 50%">
                                                <div>
                                                    <b>Minute</b>
                                                    <div class="form-group">
                                                        <select class="form-control" name="finminute">
                                                            <option value="00" selected>00</option>
                                                            {% for i in 1..59 %}
                                                                {% if(i<10) %}
                                                                    <option value="0{{ i }}">0{{ i }}</option>
                                                                {% else %}
                                                                    <option value="{{ i }}">{{ i }}</option>
                                                                {% endif %}
                                                            {% endfor %}
                                                        </select>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <div style="height: 30px;margin-top: 2px;text-align: center">
                                        <input type="submit" value="Valider" class="btn  btn-ems" />
                                    </div>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    {{ form_end(form) }}
                        
                        
                      </div>
                                        
                    </div>
                    
           
            </div>
        </div>
